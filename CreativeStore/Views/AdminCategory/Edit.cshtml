@model CreativeStore.Models.ViewModel.CategoryRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1>Admin Area For Edit Category</h1>
	</div>
</div>
<form method="post" asp-action="Edit" class="border border-light border-1 container pb-3 mt-5">
	<div class="mt-3 p-3">
		<h4 class="text-primary">Update Categories</h4>
	</div>
	<hr />
	<label asp-for="Name"></label>
	<input class="form-control" asp-for="Name" />
	<span asp-validation-for="Name"></span>
	<label asp-for="Description"></label>
	<input class="form-control" asp-for="Description" />
	<span asp-validation-for="Description"></span>
	<label asp-for="Image"></label>
	<input type="file" class="form-control" asp-for="Image" />
	<span asp-validation-for="Image"></span>
	<div class="row pt-2 pb-2">
		<div class="col-6">
			<button type="submit" class="btn btn-primary">Update</button>
		</div>
		<div class="text-end col-6">
			<a asp-controller="AdminCategory" asp-action="Index" class="btn btn-light">Back To List</a>
		</div>
	</div>
</form>
