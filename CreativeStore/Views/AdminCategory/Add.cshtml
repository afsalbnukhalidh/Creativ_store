@model CreativeStore.Models.ViewModel.CategoryRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
	<div class="container">
		<h1>Admin Area For Add Category</h1>
	</div>
</div>
<div class="container py-5">
	<form method="post">
		<div class="mb-3">
			<label class="form-label">Name</label>
			<input type="text" class="form-control" id="name" asp-for="Name" />
		</div>
		<div class="mb-3">
			<label class="form-label">Description</label>
			<input type="text" class="form-control" id="description" asp-for="Description" />
		</div>
		<div class="mb-3">
			<label class="form-label">Image</label>
			<input type="file" class="form-control" id="image" asp-for="Image" />
		</div>
		<div class="row">
			<div class="col-lg-6">
				<input type="submit" class="btn btn-success" />
			</div>
			<div class="col-lg-6 text-end">
				<a class="btn btn-warning" asp-controller="AdminCategory" asp-action="Index">Back To List</a>
			</div>
		</div>
	</form>
</div>