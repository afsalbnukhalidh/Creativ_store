@model IEnumerable<CreativeStore.Models.Domain.Category>
@{
	ViewData["Title"] = "Index";
}
@{
    @if (TempData["success"] != null)
    {
        <h4>@TempData["success"]</h4>
    }
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <div class="text-center">
            <h1>Admin Area For Category</h1>
        </div>
    </div>
</div>

<br />
<div class="container row">
    <div class="col-6">
        <h3 class="text-warning">Category List</h3>
    </div>
    <div class="col-6 text-end">
        <a class="btn btn-warning" asp-controller="AdminCategory" asp-action="Add">Create New Category</a>
    </div>
</div>
<br />
<br />
<table class="container table table-responsive table-striped table-hover table-warning text-dark" style="width:100%;">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
               Image
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td style="width:30%;">
                    @obj.Name
                </td>
                <td style="width:30%;">
                    @obj.Description
                </td>
                <td style="width:20%;">
                    @obj.Image
                </td>
                <td style="width:10%;">
                    <a asp-controller="AdminCategory" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary">Edit</a>
                </td>
                <td style="width:10%;">
                    <a asp-controller="AdminCategory" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>